%p#notice= notice
%p
  = link_to @post.title, @post.url
%p
  = @post.content
-#= link_to 'Edit', edit_post_path(@post)
-#|
-#= link_to 'Back', posts_path

- @post.comments.each do |comment|
  %tr
  %p
    body:
    %strong
      = comment.content
  %br/


= simple_form_for([@post, @post.comments.build]) do |f|
  = f.input :content, label: false, required: true
  = f.button :submit
